<%= form_for @user do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <% if @user.new_record? %>
    <%= f.label :password %>
    <%= f.text_field :password %>

    <%= f.label :password_confirmation, 'Password Confirmation' %>
    <%= f.text_field :password_confirmation %>
  <% end %>

  <% if @user.new_record? %>
    <%= f.submit 'Sign Up' %>
  <% else %>
    <%= f.submit %>
  <% end %>

<% end %>
