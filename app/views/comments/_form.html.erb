<%= form_for [@ticket, @comment] do |f| %>
    <%= f.label :text %>
    <%= f.text_field :text %>

    <% authorize?("change states", @ticket.project) do %>
      <%= f.label :state_id %>
      <%= f.select :state_id, @states.map { |s| [s.name, s.id] },
        selected: @comment.state_id %>
    <% end %>

    <%= f.submit %>

<% end %>
