<%= form_for([@project, @ticket], html: {multipart: true}) do |f| %>
  <% @ticket.errors.full_messages.each do |e| %>
    <%= e %>
  <% end %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <% number = 0 %>
  <%= f.fields_for :assets do |asset| %>
    <%= asset.label :asset, "File ##{number += 1}" %>
    <%= asset.file_field :asset %>
  <% end %>
  <%= f.submit %>

<% end %>
